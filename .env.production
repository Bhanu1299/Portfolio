# Production Environment Configuration
# MongoDB Connection - Use MongoDB Atlas or your production database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-production-secret-key-minimum-32-characters

# JWT Secret (for custom auth endpoints)
JWT_SECRET=your-production-jwt-secret-key-minimum-32-characters

# Email Configuration (Optional)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Admin Portal Configuration
ADMIN_PORT=3001
ADMIN_BASE_URL=https://admin.your-domain.com

# Security Settings
NODE_ENV=production
SECURE_COOKIES=true
HTTPS_ONLY=true

# Performance Settings
NEXT_TELEMETRY_DISABLED=1
OPTIMIZE_IMAGES=true

# Database Pool Settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME=30000